##
## this script embeds a signal generator and an iq unbalance app
## into a single tk toplevel
##

set script [expr { ! [catch {file readlink [info script]} link] ? $link : [info script]}]
lappend auto_path [file join [file dirname $script] .. lib]

package require Tk

proc shutdown {w} {
    if {$w eq {.}} {
	puts "shutdown $w: $::pid(signal-generator) $::pid(iq-unbal)"
	catch {exec kill {*}$::pid(signal-generator) {*}$::pid(iq-unbal)}
    }
}

proc main {argv} {
    pack [frame .signal-generator -container true] -side top -fill both -expand true
    pack [frame .iq-unbal -container true] -side top -fill both -expand true
    set ::pid(signal-generator) [exec [file join [file dirname $::script] signal-generator] -use [winfo id .signal-generator] &]
    set ::pid(iq-unbal) [exec [file join [file dirname $::script] iq-unbal] -use [winfo id .iq-unbal] &]
    bind . <Destroy> [list shutdown %W]
}

main $argv
