set script [expr { ! [catch {file readlink [info script]} link] ? $link : [info script]}]
lappend auto_path [file join [file dirname $script] .. lib]

package require Tk

package require sdrkit::jack-client

proc config-panel {w} {
    upvar #0 $w data
    ttk::frame $w
    return $w
}

proc status-panel {w} {
    upvar #0 $w data
    ttk::frame $w
    return $w
}

proc connect-panel {w} {
    upvar #0 $w data
    ttk::frame $w
    return $w
}
    
proc server-panel {w server} {
    upvar #0 $w data
    set data(server) $server
    ttk::notebook $w
    set p 0
    foreach panel {config status connect} {
	$w add [$panel-panel $w.p[incr p]] -text $panel
    }
    return $w
}

proc main {argv} {
    set p 0
    pack [ttk::notebook .p] -side top -fill both -expand true
    foreach server $argv {
	.p add [server-panel .p[incr p] $server] -text $server
    }
}

main $argv
