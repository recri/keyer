set script [expr { ! [catch {file readlink [info script]} link] ? $link : [info script]}]
lappend auto_path [file join [file dirname $script] .. lib]

package require sdrkit::jack-client

proc main {argv} {
    array set ::data [list server default client jack[pid]]
    foreach {option value} $argv {
	switch -- $option {
	    -s - --server { set ::data(server) $value }
	    -n - --name { set ::data(client) $value }
	    default {
		lappend args $option $value
	    }
	}
    }
    set jack [sdrkit::jack-client $::data(client) -server $::data(server) -client $::data(client)]
    puts [$jack {*}$args]
}

main $argv
