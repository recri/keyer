set script [expr { ! [catch {file readlink [info script]} link] ? $link : [info script]}]
lappend auto_path [file join [file dirname $script] .. lib]

package require sdrkit

#
# just make a gain block
# needs a user interface
# needs to implement server option
#

array set data {
    server default
    gain 0.001
    name gain
}

foreach {option value} $argv {
    switch -- $option {
	-g - --gain - -gain { set data(gain) $value }
	-n - --name - -name { set data(name) $value }
	-s - --server - -server { set data(server) $value }
    }
}

sdrkit::gain $data(name)
$data(name) $data(gain)

vwait finished
