#
# using chan(3tcl), refchan(3tcl), and transchan(3tcl)
# construct morse code encoding/decoding channels.
#

#
# use the script location to find the rest of the libraries
#
set script [expr { ! [catch {file readlink [info script]} link] ? $link : [info script]}]
set dirname [file dirname $script]

#
# append the ../lib directory to the Tcl search path
#
lappend auto_path [file join $dirname .. lib]

#
# get the itu morse dictionary
#
package require morse::itu 1.0.0

#
# get snack for audio feedback
#
package require libsnack

#
#
#
