set script [expr { ! [catch {file readlink [info script]} link] ? $link : [info script]}]
lappend auto_path [file join [file dirname $script] .. lib]

package require Tk
package require sdrui::mode-select
package require sdrui::filter-select
package require sdrui::cw-pitch
package require sdrui::agc-select
package require sdrui::af-gain

proc set-mode {mode} {
     puts "set-mode $mode"
     .filter configure -mode $mode
}
proc set-filter {string low high} {
     puts "set-filter $string $low $high"
}
proc set-cw-pitch {val} {
     puts "set-cw-pitch $val"
    .filter configure -cwpitch $val
}
proc set-cw-spot {val} {
    puts "set-cw-spot $val"
}
proc set-agc {mode} {
    puts "set-agc $mode"
}
proc set-af-gain {decibels} {
    puts "set-af-gain $decibels"
}
proc set-af-mute {val} {
    puts "set-af-mute $val"
}
pack [sdrui::mode-select .mode -command [list ::set-mode]] -side top -fill x
pack [sdrui::filter-select .filter -command [list ::set-filter]] -side top -fill x
pack [sdrui::cw-pitch .pitch -command [list ::set-cw-pitch] -spot-command [list ::set-cw-spot]] -side top -fill x
pack [sdrui::agc-select .agc -command [list ::set-agc]] -side top -fill x
pack [sdrui::af-gain .afgain -command [list ::set-af-gain] -mute-command [list ::set-af-mute]] -side top -fill x

.mode configure -mode CWU
.pitch configure -pitch 500

wm title . sdrkit:buttons

